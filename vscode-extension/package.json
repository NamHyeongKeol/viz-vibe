{
  "name": "viz-vibe",
  "displayName": "Viz Vibe",
  "description": "A graph-based workflow interface for seamless Human-AI collaboration",
  "version": "0.1.48",
  "icon": "assets/logo.png",
  "publisher": "viz-vibe",
  "repository": {
    "type": "git",
    "url": "https://github.com/NamHyeongKeol/viz-vibe.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "workflow",
    "graph",
    "vibe coding",
    "ai",
    "visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vizVibe.initProject",
        "title": "Viz Vibe: Initialize Project"
      },
      {
        "command": "vizVibe.createWorkflow",
        "title": "Viz Vibe: Create New Workflow"
      },
      {
        "command": "vizVibe.recordTurn",
        "title": "Viz Vibe: Record Current Turn"
      },
      {
        "command": "vizVibe.test",
        "title": "Viz Vibe: Test Keybinding"
      },
      {
        "command": "vizVibe.searchGraph",
        "title": "Viz Vibe: Search in Graph"
      }
    ],
    "keybindings": [
      {
        "command": "vizVibe.recordTurn",
        "key": "ctrl+shift+alt+e",
        "mac": "ctrl+shift+cmd+e",
        "when": "editorTextFocus || !editorTextFocus"
      },
      {
        "command": "vizVibe.searchGraph",
        "key": "ctrl+f",
        "mac": "cmd+f",
        "when": "activeCustomEditorId == vizVibe.vizflowEditor"
      }
    ],
    "configuration": {
      "title": "Viz Vibe",
      "properties": {
        "vizVibe.agentCommands.codex": {
          "type": "string",
          "default": "codex",
          "description": "Command to launch Codex from the Viz Vibe agent launcher."
        },
        "vizVibe.agentCommands.claudeCode": {
          "type": "string",
          "default": "claude",
          "description": "Command to launch Claude Code from the Viz Vibe agent launcher."
        },
        "vizVibe.agentCommands.openCode": {
          "type": "string",
          "default": "opencode",
          "description": "Command to launch OpenCode from the Viz Vibe agent launcher."
        },
        "vizVibe.agentCommands.cursorAgent": {
          "type": "string",
          "default": "cursor-agent",
          "description": "Command to launch Cursor Agent from the Viz Vibe agent launcher."
        },
        "vizVibe.agentCommands.copilot": {
          "type": "string",
          "default": "",
          "description": "Fallback shell command for Copilot if VS Code Copilot Chat command is unavailable."
        },
        "vizVibe.agentCommands.kiro": {
          "type": "string",
          "default": "kiro",
          "description": "Command to launch Kiro from the Viz Vibe agent launcher."
        }
      }
    },
    "languages": [
      {
        "id": "mermaid",
        "aliases": [
          "Mermaid",
          "mermaid"
        ],
        "extensions": [
          ".mmd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "vizVibe.vizflowEditor",
        "displayName": "Viz Vibe Graph Editor",
        "selector": [
          {
            "filenamePattern": "*.mmd"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cp ../LICENSE ./LICENSE && cp ../README.md ./README.md && cp ../shared/templates/VIZVIBE.md ./VIZVIBE.md && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "build:webview": "cd webview-ui && npm run build",
    "dev:webview": "cd webview-ui && npm run dev",
    "package": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "npm run publish:vscode && npm run publish:ovsx"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.7",
    "typescript": "^5.3.0"
  }
}
