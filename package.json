{
  "name": "viz-vibe",
  "displayName": "Viz Vibe",
  "description": "A graph-based workflow interface for seamless Human-AI collaboration",
  "version": "0.0.2",
  "publisher": "viz-vibe",
  "repository": {
    "type": "git",
    "url": "https://github.com/NamHyeongKeol/viz-vibe.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "workflow",
    "graph",
    "vibe coding",
    "ai",
    "visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vizVibe.initProject",
        "title": "Viz Vibe: Initialize Project"
      },
      {
        "command": "vizVibe.createWorkflow",
        "title": "Viz Vibe: Create New Workflow"
      }
    ],
    "languages": [
      {
        "id": "vizflow",
        "aliases": [
          "VizFlow",
          "vizflow"
        ],
        "extensions": [
          ".vizflow"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "vizVibe.vizflowEditor",
        "displayName": "Viz Vibe Graph Editor",
        "selector": [
          {
            "filenamePattern": "*.vizflow"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "build:webview": "cd webview-ui && npm run build",
    "dev:webview": "cd webview-ui && npm run dev",
    "package": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "npm run publish:vscode && npm run publish:ovsx"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.7",
    "typescript": "^5.3.0"
  }
}